class Solution {
    public String mergeAlternately(String word1, String word2) {
       int s1=word1.length();
       int s2=word2.length();
       int i=0,j=0;
       StringBuffer sb = new StringBuffer();
       while(i<s1 || j<s2) 
       {
       if(i<s1)
       {
           sb.append(word1.charAt(i++));
       }
       if(j<s2)
       {
           sb.append(word2.charAt(j++));
       }
       }
       return sb.toString();
    }
}
